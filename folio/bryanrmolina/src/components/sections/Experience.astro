---
import Section from "../Section.astro";
import {work} from 'C:/Users/BryanRoa/Downloads/PROJECTS/PortFolio/folio/bryanrmolina/src/cv.json'
---

<Section title = "Experience"> 
<ul>
    {work.map(({ name, startDate, endDate, position, summary }) => 
        {
            const mesesAbreviados = ['JAN', 'FEB', 'MAR', 'APR', 'MAY', 'JUN', 'JUL', 'AUG', 'SEP', 'OCT', 'NOV', 'DEC'];

            const startYear = new Date(startDate).getFullYear()
            const startMoth = new Date(startDate)
            const mothAb = mesesAbreviados[startMoth.getMonth()];

            const endYear = endDate != null ? new Date(endDate).getFullYear() : "CURRENT"
            const endMoth = endDate != null ? mesesAbreviados[new Date(endDate).getMonth()] : ""

            const years = `${startYear} ${mothAb} - ${endYear} ${endMoth}`

            return(
                <li>
                    <article>
                        <header>
                            <div>
                                <h3>{name}</h3>    
                                <h4>{position}</h4>
                            </div>
                            <time>{years}</time>
                        </header>
                        <footer>
                            <p>{summary}</p>
                        </footer>
                    </article>
                </li>
            )
    })}
</ul>
</Section>

<style>
    ul{
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    article h3{
        font-weight: 500;
        color: #111;
    }
    article h4{
        color: #222;
        font-weight: 400;
    }
    header{
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }

    time{
        color: #555;
        font-size: 0.85rem;
    }
</style>