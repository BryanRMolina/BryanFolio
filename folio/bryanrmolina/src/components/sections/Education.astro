---
import Section from "../Section.astro";
import {education} from 'C:/Users/BryanRoa/Downloads/PortFolio/folio/bryanrmolina/src/cv.json'

---

<Section title = "Education">
    <ul>
        {education.map(({ url, institution, startDate, endDate, area, studyType}) => 
            {
           
           
                const mesesAbreviados = ['JAN','FEB','MAR','APR','MAY','JUN', 'JUL', 'AUG', 'SEP', 'OCT', 'NOV', 'DEC'];
    
                const startYear = new Date(startDate).getFullYear()
                const startMoth = new Date(startDate)
                const mothAb = mesesAbreviados[startMoth.getMonth()];
    
                const endYear = endDate != null ? new Date(endDate).getFullYear() : "CURRENT"
                const endMoth = endDate != null ? mesesAbreviados[new Date(endDate).getMonth()] : ""
    
                const years = `${startYear} ${mothAb} - ${endYear} ${endMoth}`
    
                return(
                    <li>
                        <article>
                            <header>
                                <div>
                                    <a href={url} title="See the badget" target="_blank">
                                        <h3>{institution}</h3>                                          
                                    </a>

                                    <h4>{area}</h4>
                                </div>
                                <time>{years}</time>
                            </header>
                            <footer>
                            </footer>
                        </article>
                    </li>
                )
        })}
    
    </ul>

    <footer>
        <a href="https://drive.google.com/drive/folders/1TNLoi-UjjN1fyeIG1ois6M1MjWwKG88a?usp=drive_link", title="See the badget">
            <p>If you want to see more, click here.</p>
        </a>
    </footer>
    
</Section>

